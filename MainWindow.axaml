<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="Agenda.MainWindow"
        xmlns:u="https://irihi.tech/ursa"
        Title="Agenda">
    <Grid RowDefinitions="Auto, *">
        <Menu Grid.Row="0">
            <MenuItem Header="_Profile">
                <MenuItem Name="MenuItemNew" Header="New" IsEnabled="False"/>
                <MenuItem Name="MenuItemOpen" Header="Open" Click="MenuItemOpen_OnClick"/>
                <MenuItem Name="MenuItemConnect" Header="Connect" Click="MenuItemConnect_OnClick"/>
            </MenuItem>
        </Menu>
        <ContentControl Grid.Row="1" Name="MainContent"/>
        <u:OverlayDialogHost Grid.Row="0" Grid.RowSpan="2" HostId="main"/>
    </Grid>
</Window>
