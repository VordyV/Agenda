<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             xmlns:u="https://irihi.tech/ursa"
             x:Class="Agenda.Forms.ConnectionIndicatorForms.ErrorIndicatorForm">
    <Border Width="350" Height="200" Padding="10 12">
        <Grid RowDefinitions="*, Auto" RowSpacing="7">
            <Border Grid.Row="0" BorderBrush="#FA676E" Background="#50FA676E" Theme="{StaticResource CardBorder}" Padding="10 12">
                <Grid RowDefinitions="Auto, *" ColumnDefinitions="Auto, *" ColumnSpacing="7" RowSpacing="7">
                    <PathIcon Name="PathIconError" Grid.Row="0" Grid.Column="0" Foreground="#FA676E" Data="{StaticResource SemiIconActivity}"/>
                    <TextBlock Name="TextBlockTitle" Grid.Row="0" Grid.Column="1" Foreground="#FA676E" Text="Text"/>
                    <SelectableTextBlock Name="TextBlockText" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="Text"/>
                </Grid>
            </Border>
            <Button Name="ButtonOk" Click="ButtonOk_OnClick" Grid.Row="1" Content="OK" Classes="Danger" Theme="{StaticResource OutlineButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
