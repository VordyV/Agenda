<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Agenda.App.Controls">
  <Design.PreviewWith>
    <controls:ServerForm />
  </Design.PreviewWith>

  <Style Selector="controls|ServerForm">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>

        <Border Theme="{StaticResource CardBorder}">
          <Grid RowDefinitions="Auto, Auto, *, Auto">
            <SelectableTextBlock Grid.Row="0" Padding="0 6 0 6" Text="{TemplateBinding Title}" Theme="{StaticResource TitleSelectableTextBlock}" Classes="H4"/>
            <SelectableTextBlock Grid.Row="1" Padding="0 6 0 6" Text="{TemplateBinding SubTitle}" Classes="Quaternary"/>
            <SplitButton Grid.Row="3" Name="PART_Button_Connect" Content="Connect" HorizontalAlignment="Right" VerticalAlignment="Bottom">
              <SplitButton.Flyout>
                <MenuFlyout Placement="Bottom">
                  <MenuItem Header="Edit" Name="PART_MenuItem_Edit"/>
                  <MenuItem Header="Remove" Name="PART_MenuItem_Remove"/>
                </MenuFlyout>
              </SplitButton.Flyout>
            </SplitButton>
          </Grid>
        </Border>
       
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
